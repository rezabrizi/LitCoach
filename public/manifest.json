{
    "manifest_version": 3,
    "name": "LitCoach",
    "permissions": ["sidePanel", "tabs", "scripting", "activeTab"],
    "icons": {
        "16": "icons/icon24.png",
        "48": "icons/icon48.png"
    },
    "action": {
        "default_icon": {
            "16": "icons/icon24.png",
            "48": "icons/icon48.png"
        }
    },
    "side_panel": {
        "default_path": "index.html"
    },
    "background": {
        "service_worker": "src/background.js",
        "type": "module"
    },
    "host_permissions": ["https://leetcode.com/*"]
}
